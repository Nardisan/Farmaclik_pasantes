<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="l10n_ve_retencion_iva.wh-iva_receipt_document">
        <t t-call="web.basic_layout">
            <t t-set="o" t-value="o.with_context({'lang':o.partner_id.lang})"/>
            <div class="page">
                <style type="text/css">
                    .table-sm {
                        font-size:11px;
                    }

                    .table-bordered tr, .table-bordered tr th, .table-bordered tr td{
                        border: 1px solid #CCC;
                    }
                </style>
                <t t-if="o and 'company_id' in o">
                    <t t-set="company" t-value="o.company_id"/>
                </t>
                <t t-if="not o or not 'company_id' in o">
                    <t t-set="company" t-value="res_company"/>
                </t>
                <div style="display: block; margin-bottom: 3px">
                    <div class="pull-left" style="display:inline-block; font-size:10px;" align="center">
                        <table style="padding: 5px; border: none;" class="text-center">
                           <tr style="text-align:center">
                               <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" height="50px" style="margin-top: 0px; max-width: 150px;"/>
                           </tr>
                        </table>
                        <br/>
                        <table style="padding: 5px; border: none;" class="text-center">
                            <tr style="text-align:center">
                                <td class="text-center" style="font-style: bold;" t-esc="company.name"/>
                            </tr>
                            <tr>
                                <td class="text-center" style="font-style: bold;" t-esc="company.rif"/>
                            </tr>
                        </table>
                    </div>
                    <div class="pull-right text-center" style="display:inline-block; font-size:10px;">
                        <br/>
                        <table class="table table-bordered table-sm">
                            <tr>
                                <th class="text-center" colspan="4" width="250px"><strong>NÚMERO DE COMPROBANTE</strong></th>
                            </tr>
                            <tr>
                                <td class="text-center" colspan="3"><strong><span t-field="o.number"/></strong></td>
                            </tr>
                        </table>
                        <table class="table table-bordered table-sm">
                            <tr>
                                <th width="150px">
                                    <strong>
                                        FECHA nueva
                                    </strong>
                                </th>
                            </tr>
                            <tr>
                                <td>
                                    <strong>
                                        <span t-field="o.date" t-options="{&quot;widget&quot;: &quot;date&quot;}"/>
                                    </strong>
                                </td>
                            </tr>
                        </table>
                        <table class="table table-bordered table-sm">
                            <tr>
                                <th width="150px">
                                    <strong>
                                        PERIODO FISCAL
                                    </strong>
                                </th>
                            </tr>
                            <tr>
                                <td>
                                    <strong>
                                        <span t-field="o.date" t-options="{'format': 'M-YYYY'}"/>
                                    </strong>
                                </td>
                            </tr>
                        </table>
                    </div>
                    <center>
                        <strong>
                            <div class="text-center" style="display:inline-block; font-size:10px">
                                <span style="text-aling: center; width: 100%">COMPROBANTE DE RETENCIÓN <br/>
                                    PROVIDENCIA ADMINISTRATIVA N° SNAT/2015/0049 DEL 10/08/2015 <br/>
                                    LEY DE IVA ART. 11 " La Administración Tributaria podrá designar como responsables del pago del impuesto,<br/>
                                    en calidad de agentes de retención,razón de sus actividades privadas intervengan en operaciones gravadas con el impuesto <br/>
                                    establecido en este Decreto con Rango, Valor y Fuerza de Ley".
                                </span>
                            </div>
                        </strong>
                    </center>
                </div>
                <t class="text-center" t-if="o.move_type in ('in_invoice','in_refund')">
                    <div class="row">
                        <div class="col-12">
                            <table class="table table-bordered table-sm">
                                <tr>
                                    <td colspan="2" class="text-center" style="width:250px;">
                                        <strong>
                                            DATOS DEL AGENTE DE RETENCIÓN
                                        </strong>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="text-left" style="width:250px;">
                                        <strong>NOMBRE:</strong>
                                    </td>
                                    <td>
                                        <span t-field="o.company_id.name"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="text-left" style="width:250px;">
                                        <strong>RIF:</strong>
                                    </td>
                                    <td>
                                        <span t-field="o.company_id.rif"/>
                                    </td>
                                </tr>

                                <tr>
                                    <td class="text-left" style="width:250px;">
                                        <strong>DIRECCIÓN:</strong>
                                    </td>

                                    <td>
                                        <span t-field="o.company_id.street"/>
                                        <t t-if="o.company_id.parish_id">

                                            -<span t-field="o.company_id.parish_id.name"/>
                                        </t>
                                        <t t-if="o.company_id.state_id">

                                            -<span t-field="o.company_id.state_id.name"/>
                                        </t>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                    <div class="row" style="margin-top:10px;">
                        <div class="col-12">
                            <table class="table table-bordered table-sm">
                                <tr>
                                    <td colspan="4" class="text-center" style="width:250px;">
                                        <strong>
                                            DATOS DEL SUJETO RETENIDO
                                        </strong>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="text-left" style="width:250px;">
                                        <strong>NOMBRE:</strong>
                                    </td>
                                    <td colspan="3">
                                        <span t-field="o.partner_id.name"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="text-left" style="width:250px;">
                                        <strong>RIF:</strong>
                                    </td>
                                    <td>
                                        <span t-field="o.partner_id.rif"/>
                                    </td>
                                    <td>
                                        <strong>TELF:</strong>
                                    </td>
                                    <td>
                                        <t t-if="o.partner_id.phone">
                                            <span t-field="o.partner_id.phone"/>
                                        </t>
                                        <t t-elif="o.partner_id.mobile">
                                            <span t-field="o.partner_id.mobile"/>
                                        </t>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="text-left" style="width:250px;">
                                        <strong>DIRECCIÓN:</strong>
                                    </td>
                                    <td colspan="3">
                                        <span t-field="o.partner_id.street"/>
                                        <t t-if="o.partner_id.city_id">

                                            -<span t-field="o.partner_id.city_id.name"/>
                                        </t>
                                        <t t-if="o.partner_id.state_id">

                                            -<span t-field="o.partner_id.state_id.name"/>
                                        </t>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                    <table class="table table-bordered table-sm" style="margin-top:10px; border-color: #CCC;">
                        <t t-set="retention" t-value="o.wh_lines"/>
                        <!-- <t t-if="o.move_type =='in_refund'" t-set="retention" t-value="o.mapped('wh_lines.invoice_id.reversed_entry_id.wh_id.wh_lines') + retention"/> -->
                        <tr>
                            <th class="text-center " style="font-size:10px;" colspan="11">
                                <strong>
                                    DATOS DEL MONTO RETENIDO Y CONCEPTO
                                </strong>
                            </th>
                            <th class="text-center" style="font-size:10px" colspan="4">
                                <strong>
                                    COMPRAS INTERNAS E IMPORTACIONES
                                </strong>
                            </th>
                            <th class="text-center" colspan="1"/>
                        </tr>
                        <tr>
                            <!--1--><th class="text-center" style="font-size:10px" colspan="1">Oper. Nro.</th>
                            <!--2--><th class="text-center" style="font-size:10px" colspan="2">Fecha</th>
                            <!--3--><th class="text-center" style="font-size:10px" colspan="1">Número de la Factura</th>
                            <!--4--><th class="text-center" style="font-size:10px" colspan="1">Núm. Control de Factura</th>
                            <!--5--><th class="text-center" style="font-size:10px" colspan="1">Número Nota de Débito</th>
                            <!--6--><th class="text-center" style="font-size:10px" colspan="1">Número Nota de Crédito</th>
                            <!--7--><th class="text-center" style="font-size:10px" colspan="1">Tipo de Transacción</th>
                            <!--8--><th class="text-center" style="font-size:10px" colspan="1">Número de Factura Afectada</th>
                            <!--9--><th class="text-center" style="font-size:10px" colspan="1">Monto Total de la Factura</th>
                            <!--10--><th class="text-center" style="font-size:10px" colspan="1">Compra sin Derecho a Credito Fiscal</th>
                            <!--11--><th class="text-center" style="font-size:10px" colspan="1">Base Imponible</th>
                            <!--12--><th class="text-center" style="font-size:10px" colspan="1">% IVA</th>
                            <!--13--><th class="text-center" style="font-size:10px" colspan="1">Impuesto</th>
                            <!--14--><th class="text-center" style="font-size:10px" colspan="1">Porc. %</th>
                            <!--15--><th class="text-center" style="font-size:10px" colspan="1">Monto Retenido </th>
                        </tr>
                        <t t-set="iterador" t-value="1"/>
                        <t t-set="acumulador_exento" t-value="0"/>
                        <t t-set="acum_base" t-value="0"/>




                        <!--CUANDO LOS MONTOS SON EN UNA MONEDA IGUAL A LA DE LA COMPAÑIA EJE: EN $-->
                        <t t-if="o.wh_lines[0].invoice_id.currency_id == o.wh_lines[0].invoice_id.company_id.currency_id">
                            <tr t-foreach="retention" t-as="l">
                                <t t-if="o.state !='annulled'">
                                    <td class="text-center" style="font-size:10px" colspan="1">
                                        <!--Oper. Nro.-->
                                        <span t-esc="iterador"/>
                                    </td>
                                    <td class="text-center" style="font-size:10px" colspan="2">
                                        <!--Fecha-->
                                        <span t-field="l.invoice_id.invoice_date"/>
                                    </td>
                                    <td class="text-center" style="font-size:10px" colspan="1">
                                        <!--Número de la Factura Afect-->
                                        <span t-field="l.invoice_id.vendor_invoice_number"/>
                                    </td>
                                    <td class="text-center" style="font-size:10px" colspan="1">
                                        <!--Núm. Control de Factura-->
                                        <span t-field="l.invoice_id.nro_control"/>
                                    </td>
                                    <td class="text-center" style="font-size:10px" colspan="1">
                                        <!--Número Nota de Débito-->
                                        <span t-if="l.mapped('invoice_id.debit_origin_id')" t-field="l.invoice_id.debit_origin_id.vendor_invoice_number"/>
                                    </td>
                                    <td class="text-center" style="font-size:10px" colspan="1">
                                        <!--Número Nota de Crédito-->
                                        <span t-if="l.invoice_id.move_type == 'in_refund'" t-field="l.invoice_id.parent_id.vendor_invoice_number"/>
                                    </td>
                                    <td class="text-center" style="font-size:10px" colspan="1">
                                        <!--Tipo de Transacción-->
                                        <span t-esc="l.invoice_id.transaction_type"/>
                                    </td>
                                    <td class="text-center" style="font-size:10px" colspan="1"/> <!--Número de Factura Afectada-->
                                    <td class="text-center" style="font-size:10px" colspan="1">
                                        <t t-set="monto_total_bs" t-value="l.sub_total * o.manual_currency_exchange_rate"/>
                                        <t t-if="l.invoice_id.move_type == 'in_refund'">-</t>
                                        <t t-if="iterador == 1">
                                            <!--Monto Total de la Fatura-->
                                            <span t-esc="l.invoice_id.amount_total * o.manual_currency_exchange_rate" t-options="{                                                     'widget': 'monetary',                                                      'display_currency': o.company_id.currency_id_ref,                                                      'from_currency': o.company_id.currency_id_ref                                                 }"/>
                                        </t>
                                        <t t-else="">
                                            <!--Monto Total de la Fatura-->
                                            <span t-esc="monto_total_bs" t-options="{'widget': 'monetary', 'display_currency': o.company_id.currency_id_ref}"/>
                                        </t>
                                    </td>
                                    <t t-set="sub_total_bs" t-value="l.sub_total * o.manual_currency_exchange_rate"/>
                                    <t t-if="l.ret_tax.amount == 0 ">
                                        <td class="text-center" style="font-size:10px" colspan="1">
                                            <t t-if="l.invoice_id.move_type == 'in_refund'">-</t>
                                            <t t-if="iterador == 1">
                                                <!--Compra sin Derecho a Credito Fiscal-->
                                                <span t-esc="(sum(l.invoice_id.invoice_line_ids.filtered(lambda line: not len(line.tax_ids)).mapped('price_subtotal')) + sum(l.invoice_id.invoice_line_ids.filtered(lambda line: len(line.mapped('tax_ids').filtered(lambda tax: tax.amount == 0))).mapped('price_subtotal')))*o.manual_currency_exchange_rate" t-options="{'widget': 'monetary', 'display_currency': o.company_id.currency_id_ref}"/>
                                            </t>
                                            <t t-else="">
                                                <!--Compra sin Derecho a Credito Fiscal-->
                                                <span t-esc="sub_total_bs" t-options="{'widget': 'monetary', 'display_currency': o.company_id.currency_id_ref}"/>
                                            </t>
                                        </td>
                                        <t t-set="acumulador_exento" t-value="acumulador_exento + (sub_total_bs + (sum(l.invoice_id.invoice_line_ids.filtered(lambda line: not line.tax_ids).mapped('price_subtotal'))* o.manual_currency_exchange_rate)) "/>
                                    </t>
                                    <t t-else="">
                                         <td class="text-center" style="font-size:10px" colspan="1">
                                            <t t-if="l.invoice_id.move_type == 'in_refund'">-</t>
                                            <t t-if="iterador == 1">
                                                <!--Compra sin Derecho a Credito Fiscal-->
                                                <t t-esc="(sum(l.invoice_id.invoice_line_ids.filtered(lambda line: not len(line.tax_ids)).mapped('price_subtotal')) + sum(l.invoice_id.invoice_line_ids.filtered(lambda line: len(line.mapped('tax_ids').filtered(lambda tax: tax.amount == 0))).mapped('price_subtotal')))*o.manual_currency_exchange_rate"
                                                    t-options="{'widget': 'monetary', 'display_currency': o.company_id.currency_id_ref}"/>

                                                <t t-set="acum_base" t-value="(sum(l.invoice_id.invoice_line_ids.filtered(lambda line: not len(line.tax_ids)).mapped('price_subtotal')) + sum(l.invoice_id.invoice_line_ids.filtered(lambda line: len(line.mapped('tax_ids').filtered(lambda tax: tax.amount == 0))).mapped('price_subtotal')))*o.manual_currency_exchange_rate"/>
                                            </t>
                                            <t t-else="">
                                                <!--Compra sin Derecho a Credito Fiscal-->
                                                0,00
                                            </t>
                                        </td>
                                    </t>
                                    <td class="text-center" style="font-size:10px" colspan="1">
                                        <t t-if="l.invoice_id.move_type == 'in_refund'">
                                            -
                                        </t>
                                        <!--Base Imponible-->
                                        <t t-set="base_imponible_bs" t-value="l.amount_tax * o.manual_currency_exchange_rate"/>
                                        <span t-esc="(l.invoice_id.amount_untaxed * o.manual_currency_exchange_rate) - acum_base" t-options="{'widget': 'monetary', 'display_currency': o.company_id.currency_id_ref}"/>
                                    </td>
                                    <td class="text-center" style="font-size:10px" colspan="1">
                                        <!--% IVA-->
                                        <span t-field="l.ret_tax.amount" t-options="{'widget': 'float', 'precision': 2}"/>
                                        %
                                    </td>
                                    <td class="text-center" style="font-size:10px" colspan="1">
                                        <t t-if="l.invoice_id.move_type == 'in_refund'">
                                            -
                                        </t>
                                        <!--Impuesto-->
                                        <t t-set="impuesto_bs" t-value="l.invoice_id.amount_tax * o.manual_currency_exchange_rate"/>
                                        <span t-esc="impuesto_bs" t-options="{'widget': 'monetary', 'display_currency': o.company_id.currency_id_ref}"/>
                                    </td>
                                    <td class="text-center" style="font-size:10px" colspan="1">
                                        <!--Porc. %-->
                                        <span t-field="o.wh_lines[0].rate_amount" t-options="{'widget': 'float', 'precision': 2}"/>
                                        %
                                    </td>
                                    <td class="text-center" style="font-size:10px" colspan="1">
                                        <t t-if="l.invoice_id.move_type == 'in_refund'">
                                            -
                                        </t>
                                        <!--Monto Retenido-->
                                        <!-- <t t-set="monto_retenido_bs" t-value="round(l.ret_amount * o.manual_currency_exchange_rate,2)"/> -->
                                        <t t-set="monto_retenido_bs" t-value="round((l.invoice_id.amount_tax * o.manual_currency_exchange_rate) * ( o.wh_lines[0].rate_amount/100),2)"/>

                                        <span t-esc="monto_retenido_bs" t-options="{'widget': 'monetary', 'display_currency': o.company_id.currency_id_ref}"/>
                                    </td>
                                    <t t-set="iterador" t-value="iterador+1"/>
                                </t>
                            </tr>
                            <tr>
                                <th class="text-center" style="font-size:10px" colspan="9">
                                    TOTALES
                                </th>

                                <!-- Monto Total  de la Factura -->
                                <th t-if="o.move_type == 'in_invoice'" class="text-center" style="font-size:10px" colspan="1">
                                    <t t-esc="(sum(o.mapped('wh_lines.invoice_id.amount_total')))*o.manual_currency_exchange_rate" t-options="{'widget': 'monetary', 'display_currency': o.company_id.currency_id_ref}"/>
                                </th>
                                <th t-if="o.move_type == 'in_refund'" class="text-center" style="font-size:10px" colspan="1">
                                    <t t-esc="(sum(o.mapped('wh_lines.invoice_id.amount_total')))*o.manual_currency_exchange_rate" t-options="{'widget': 'monetary', 'display_currency': o.company_id.currency_id_ref}"/>
                                </th>

                                <!-- Compra sin Derecho a Credito Fiscal -->
                                <th t-if="o.move_type == 'in_invoice'" class="text-center" style="font-size:10px" colspan="1">
                                   <t t-esc="(sum(o.wh_lines.invoice_id.invoice_line_ids.filtered(lambda line: len(line.mapped('tax_ids').filtered(lambda tax: tax.amount == 0))).mapped('price_subtotal')))*o.manual_currency_exchange_rate" t-options="{'widget': 'monetary', 'display_currency': o.company_id.currency_id_ref}"/>
                                </th>
                                <th t-if="o.move_type == 'in_refund'" class="text-center" style="font-size:10px" colspan="1">
                                    <t t-esc="(sum(o.wh_lines.invoice_id.invoice_line_ids.filtered(lambda line: not line.tax_ids).mapped('price_subtotal')))*o.manual_currency_exchange_rate" t-options="{'widget': 'monetary', 'display_currency': o.company_id.currency_id_ref}"/>
                                </th>

                                <!-- Base Imponible -->
                                <th t-if="o.move_type == 'in_invoice'" class="text-center" style="font-size:10px" colspan="1">
                                    <t t-esc="(sum(o.wh_lines.invoice_id.invoice_line_ids.filtered(lambda line: len(line.mapped('tax_ids').filtered(lambda tax: tax.amount &gt; 0))).mapped('price_subtotal')))*o.manual_currency_exchange_rate" t-options="{'widget': 'monetary', 'display_currency': o.company_id.currency_id_ref}"/>
                                </th>

                                <!-- IVA -->
                                <th class="text-center" style="font-size:10px" colspan="1"/>

                                <th t-if="o.move_type == 'in_refund'" class="text-center" style="font-size:10px" colspan="1">
                                    <t t-esc="(sum(o.wh_lines.filtered(lambda whl: whl.state != 'annulled').mapped('base_tax')))*o.manual_currency_exchange_rate" t-options="{'widget': 'monetary', 'display_currency': o.company_id.currency_id_ref}"/>
                                </th>

                                <th t-if="o.move_type == 'in_invoice'" class="text-center" style="font-size:10px" colspan="1">
                                    <t t-esc="round((sum(o.wh_lines.filtered(lambda whl: whl.state != 'annulled').mapped('invoice_id.amount_tax')))*o.manual_currency_exchange_rate,2)" t-options="{'widget': 'monetary', 'display_currency': o.company_id.currency_id_ref}"/>
                                </th>
                                <th t-if="o.move_type == 'in_refund'" class="text-center" style="font-size:10px" colspan="1">
                                    <t t-esc="round((sum(o.wh_lines.filtered(lambda whl: whl.state != 'annulled').mapped('amount_tax')))*o.manual_currency_exchange_rate,2)" t-options="{'widget': 'monetary', 'display_currency': o.company_id.currency_id_ref}"/>
                                </th>

                                <!-- Porcentaje -->
                                <th class="text-center" style="font-size:10px" colspan="1"/>

                                <!-- Monto Retenido -->
                                <th t-if="o.move_type == 'in_invoice'" class="text-center" style="font-size:10px" colspan="1">
                                  <t t-esc="round((o.wh_lines.invoice_id.amount_tax * o.wh_lines.invoice_id.manual_currency_exchange_rate) * ( o.wh_lines.rate_amount/100),2)"  t-options="{'widget': 'monetary', 'display_currency': o.wh_lines.invoice_id.company_id.currency_id_ref}"/>  
                                 <!-- <t t-esc="round((sum(o.wh_lines.filtered(lambda whl: whl.state != 'annulled').mapped('amount_tax')))*o.manual_currency_exchange_rate * ( o.wh_lines[0].rate_amount/100) ,2)" t-options="{'widget': 'monetary', 'display_currency': o.company_id.currency_id_ref}"/> -->
                                </th>
                                <th t-if="o.move_type == 'in_refund'" class="text-center" style="font-size:10px" colspan="1">
                                    <t t-esc="round((sum(o.wh_lines.filtered(lambda whl: whl.state != 'annulled').mapped('amount_tax')))*o.manual_currency_exchange_rate * ( o.wh_lines[0].rate_amount/100),2)" t-options="{'widget': 'monetary', 'display_currency': o.company_id.currency_id_ref}"/>
                                </th>
                            </tr>
                        </t>


                        <!-- <t t-set="monto_retenido_bs" t-value="round((l.invoice_id.amount_tax * o.manual_currency_exchange_rate) * ( o.wh_lines[0].rate_amount/100),2)"/> -->





                        <!--CUANDO LOS MONTOS SON EN MONEDAS DIFERENTES-->
                        <t t-else="">
                            <tr t-foreach="retention" t-as="l">
                                <t t-if="o.state !='annulled'">
                                    <td class="text-center" style="font-size:10px" colspan="1">
                                        <!--Oper. Nro.-->
                                        <span t-esc="iterador"/>
                                    </td>
                                    <td class="text-center" style="font-size:10px" colspan="2">
                                        <!--Fecha-->
                                        <span t-field="l.invoice_id.invoice_date"/>
                                    </td>
                                    <td class="text-center" style="font-size:10px" colspan="1">
                                        <!--Número de la Factura Afect-->
                                        <t t-if="l.invoice_id.move_type == 'in_invoice'">
                                            <span t-field="l.invoice_id.vendor_invoice_number"/>
                                        </t>
                                        <t t-if="l.invoice_id.move_type == 'in_invoice' and l.invoice_id.debit_origin_id">
                                            <span t-field="l.invoice_id.debit_origin_id.vendor_invoice_number"/>
                                        </t>
                                        <t t-elif="l.invoice_id.move_type == 'in_refund'">
                                            <span t-field="l.invoice_id.parent_id.vendor_invoice_number"/>
                                        </t>
                                    </td>
                                    <td class="text-center" style="font-size:10px" colspan="1">
                                        <!--Núm. Control de Factura-->
                                        <span t-field="l.invoice_id.nro_control"/>
                                    </td>
                                    <td class="text-center" style="font-size:10px" colspan="1">
                                        <!--Número Nota de Débito-->
                                        <span t-if="l.mapped('invoice_id.debit_origin_id')" t-field="l.invoice_id.debit_origin_id.vendor_invoice_number"/>
                                    </td>
                                    <td class="text-center" style="font-size:10px" colspan="1">
                                        <!--Número Nota de Crédito-->
                                        <span t-if="l.invoice_id.move_type == 'in_refund'" t-field="l.invoice_id.parent_id.vendor_invoice_number"/>
                                    </td>
                                    <td class="text-center" style="font-size:10px" colspan="1">
                                        <!--Tipo de Transacción-->
                                        <span t-esc="l.invoice_id.transaction_type"/>
                                    </td>
                                    <td class="text-center" style="font-size:10px" colspan="1"/> <!--Número de Factura Afectada-->
                                    <td class="text-center" style="font-size:10px" colspan="1">
                                        <t t-set="monto_total_bs" t-value="l.sub_total / o.manual_currency_exchange_rate"/>
                                        <t t-if="l.invoice_id.move_type == 'in_refund'">-</t>
                                        <t t-if="iterador == 1">
                                            <!--Monto Total de la Fatura-->
                                            <span t-esc="l.invoice_id.amount_total" t-options="{                                                     'widget': 'monetary',                                                      'display_currency': o.company_id.currency_id_ref,                                                      'from_currency': o.company_id.currency_id_ref                                                 }"/>
                                        </t>
                                        <t t-else="">
                                            <!--Monto Total de la Fatura-->
                                            <span t-esc="monto_total_bs" t-options="{'widget': 'monetary', 'display_currency': o.company_id.currency_id_ref}"/>
                                        </t>
                                    </td>
                                    <t t-set="sub_total_bs" t-value="l.sub_total / o.manual_currency_exchange_rate"/>
                                    <t t-if="l.ret_tax.amount == 0 ">
                                        <td class="text-center" style="font-size:10px" colspan="1">
                                            <t t-if="l.invoice_id.move_type == 'in_refund'">-</t>
                                            <t t-if="iterador == 1">
                                                <!--Compra sin Derecho a Credito Fiscal-->
                                                <span t-esc="sum(l.invoice_id.invoice_line_ids.filtered(lambda line: not len(line.tax_ids)).mapped('price_subtotal')) + sum(l.invoice_id.invoice_line_ids.filtered(lambda line: len(line.mapped('tax_ids').filtered(lambda tax: tax.amount == 0))).mapped('price_subtotal'))" t-options="{'widget': 'monetary', 'display_currency': o.company_id.currency_id_ref}"/>
                                            </t>
                                            <t t-else="">
                                                <!--Compra sin Derecho a Credito Fiscal-->
                                                <span t-esc="sub_total_bs" t-options="{'widget': 'monetary', 'display_currency': o.company_id.currency_id_ref}"/>
                                            </t>
                                        </td>
                                        <t t-set="acumulador_exento" t-value="acumulador_exento + (sum(l.invoice_id.invoice_line_ids.filtered(lambda line: not len(line.tax_ids)).mapped('price_subtotal')) + sum(l.invoice_id.invoice_line_ids.filtered(lambda line: len(line.mapped('tax_ids').filtered(lambda tax: tax.amount == 0))).mapped('price_subtotal'))) "/>
                                    </t>
                                    <t t-else="">
                                         <td class="text-center" style="font-size:10px" colspan="1">
                                            <t t-if="l.invoice_id.move_type == 'in_refund'">-</t>
                                            <t t-if="iterador == 1">
                                                <!--Compra sin Derecho a Credito Fiscal-->
                                                <t t-esc="(sum(l.invoice_id.invoice_line_ids.filtered(lambda line: not len(line.tax_ids)).mapped('price_subtotal')) + sum(l.invoice_id.invoice_line_ids.filtered(lambda line: len(line.mapped('tax_ids').filtered(lambda tax: tax.amount == 0))).mapped('price_subtotal')))" t-options="{'widget': 'monetary', 'display_currency': o.company_id.currency_id_ref}"/>
                                                <t t-set="acum_base" t-value="sum(l.invoice_id.invoice_line_ids.filtered(lambda line: not len(line.tax_ids)).mapped('price_subtotal')) + sum(l.invoice_id.invoice_line_ids.filtered(lambda line: len(line.mapped('tax_ids').filtered(lambda tax: tax.amount == 0))).mapped('price_subtotal'))"/>
                                            </t>
                                            <t t-else="">
                                                <!--Compra sin Derecho a Credito Fiscal-->
                                                0
                                            </t>
                                        </td>
                                    </t>
                                    <td class="text-center" style="font-size:10px" colspan="1">
                                        <t t-if="l.invoice_id.move_type == 'in_refund'">
                                            -
                                        </t>
                                        <!--Base Imponible-->
                                        <t t-set="base_imponible_bs" t-value="l.amount_tax / o.manual_currency_exchange_rate"/>
                                        <span t-esc="l.invoice_id.amount_untaxed - (sum(l.invoice_id.invoice_line_ids.filtered(lambda line: not len(line.tax_ids)).mapped('price_subtotal')) + sum(l.invoice_id.invoice_line_ids.filtered(lambda line: len(line.mapped('tax_ids').filtered(lambda tax: tax.amount == 0))).mapped('price_subtotal')))" t-options="{'widget': 'monetary', 'display_currency': o.company_id.currency_id_ref}"/>
                                    </td>
                                    <td class="text-center" style="font-size:10px" colspan="1">
                                        <!--% IVA-->
                                        <span t-field="l.ret_tax.amount" t-options="{'widget': 'float', 'precision': 2}"/>
                                        %
                                    </td>
                                    <td class="text-center" style="font-size:10px" colspan="1">
                                        <t t-if="l.invoice_id.move_type == 'in_refund'">
                                            -
                                        </t>
                                        <!--Impuesto-->
                                        <t t-set="impuesto_bs" t-value="l.invoice_id.amount_tax"/>
                                        <span t-esc="impuesto_bs" t-options="{'widget': 'monetary', 'display_currency': o.company_id.currency_id_ref}"/>
                                    </td>
                                    <td class="text-center" style="font-size:10px" colspan="1">
                                        <!--Porc. %-->
                                        <span t-field="o.wh_lines[0].rate_amount" t-options="{'widget': 'float', 'precision': 2}"/>
                                        %
                                    </td>
                                    <td class="text-center" style="font-size:10px" colspan="1">
                                        <t t-if="l.invoice_id.move_type == 'in_refund'">
                                            -
                                        </t>
                                        <!--Monto Retenido-->
                                        <t t-set="monto_retenido_bs" t-value="round(l.invoice_id.amount_tax * ( o.wh_lines[0].rate_amount/100),2)"/>
                                        <span t-esc="monto_retenido_bs" t-options="{'widget': 'monetary', 'display_currency': o.company_id.currency_id_ref}"/>
                                    </td>
                                    <t t-set="iterador" t-value="iterador+1"/>
                                </t>
                            </tr>
                            <tr>
                                <th class="text-center" style="font-size:10px" colspan="9">
                                    TOTALES
                                </th>
                                <!-- Monto Total  de la Factura -->
                                <th t-if="o.move_type == 'in_invoice'" class="text-center" style="font-size:10px" colspan="1">
                                    <t t-esc="(sum(o.mapped('wh_lines.invoice_id.amount_total')))" t-options="{'widget': 'monetary', 'display_currency': o.company_id.currency_id_ref}"/>
                                </th>
                                <th t-if="o.move_type == 'in_refund'" class="text-center" style="font-size:10px" colspan="1">
                                    <t t-esc="(sum(o.mapped('wh_lines.invoice_id.amount_total')))" t-options="{'widget': 'monetary', 'display_currency': o.company_id.currency_id_ref}"/>
                                </th>

                                <!-- Compra sin Derecho a Credito Fiscal -->
                                <th t-if="o.move_type == 'in_invoice'" class="text-center" style="font-size:10px" colspan="1">
                                   <t t-esc="(sum(o.wh_lines.invoice_id.invoice_line_ids.filtered(lambda line: len(line.mapped('tax_ids').filtered(lambda tax: tax.amount == 0))).mapped('price_subtotal')))" t-options="{'widget': 'monetary', 'display_currency': o.company_id.currency_id_ref}"/>
                                </th>
                                <th t-if="o.move_type == 'in_refund'" class="text-center" style="font-size:10px" colspan="1">
                                    <t t-esc="(sum(o.wh_lines.invoice_id.invoice_line_ids.filtered(lambda line: not line.tax_ids).mapped('price_subtotal')))" t-options="{'widget': 'monetary', 'display_currency': o.company_id.currency_id_ref}"/>
                                </th>
                                <!-- Base Imponible -->
                                <th t-if="o.move_type == 'in_invoice'" class="text-center" style="font-size:10px" colspan="1">
                                    <t t-esc="(sum(o.wh_lines.invoice_id.invoice_line_ids.filtered(lambda line: len(line.mapped('tax_ids').filtered(lambda tax: tax.amount &gt; 0))).mapped('price_subtotal')))" t-options="{'widget': 'monetary', 'display_currency': o.company_id.currency_id_ref}"/>
                                </th>
                                <th t-if="o.move_type == 'in_refund'" class="text-center" style="font-size:10px" colspan="1">
                                    <t t-esc="(sum(o.wh_lines.invoice_id.invoice_line_ids.filtered(lambda line: len(line.mapped('tax_ids').filtered(lambda tax: tax.amount &gt; 0))).mapped('price_subtotal')))" t-options="{'widget': 'monetary', 'display_currency': o.company_id.currency_id_ref}"/>
                                </th>

                                <!-- IVA -->
                                <th class="text-center" style="font-size:10px" colspan="1"/>

                                <!-- Impuesto -->
                                <th t-if="o.move_type == 'in_invoice'" class="text-center" style="font-size:10px" colspan="1">
                                    <t t-esc="(sum(o.wh_lines.filtered(lambda whl: whl.state != 'annulled').mapped('invoice_id.amount_tax')))" t-options="{'widget': 'monetary', 'display_currency': o.company_id.currency_id_ref}"/>
                                </th>
                                <th t-if="o.move_type == 'in_refund'" class="text-center" style="font-size:10px" colspan="1">
                                    <t t-esc="(sum(o.wh_lines.filtered(lambda whl: whl.state != 'annulled').mapped('amount_tax')))/ o.manual_currency_exchange_rate" t-options="{'widget': 'monetary', 'display_currency': o.company_id.currency_id_ref}"/>
                                </th>

                                <!-- Porcentaje -->
                                <th class="text-center" style="font-size:10px" colspan="1"/>

                                <!-- Monto Retenido -->
                                <th t-if="o.move_type == 'in_invoice'" class="text-center" style="font-size:10px" colspan="1">
                                    <t t-esc="round((sum(o.wh_lines.filtered(lambda whl: whl.state != 'annulled').mapped('invoice_id.amount_tax'))) * ( o.wh_lines[0].rate_amount/100) ,2)" t-options="{'widget': 'monetary', 'display_currency': o.company_id.currency_id_ref}"/>
                                </th>
                                <th t-if="o.move_type == 'in_refund'" class="text-center" style="font-size:10px" colspan="1">
                                    <t t-esc="round((sum(o.wh_lines.filtered(lambda whl: whl.state != 'annulled').mapped('amount_tax'))) / o.manual_currency_exchange_rate * ( o.wh_lines[0].rate_amount/100),2)" t-options="{'widget': 'monetary', 'display_currency': o.company_id.currency_id_ref}"/>
                                </th>
                            </tr>
                        </t>
                    </table>
                    <center>
                        <p style="font-size:10px">
                            <strong>
